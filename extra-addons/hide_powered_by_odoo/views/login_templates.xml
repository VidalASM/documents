<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="login_page_layout" inherit_id="web.login_layout" name="Login Page Layout">
        <xpath expr="//div[@class='card-body']//div[last()]" position="replace">
            <div class="text-center small mt-4 pt-3 login--footer" t-if="not disable_footer">
                <t t-if="not disable_database_manager">
                    <a class="pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
                </t>
            </div>
        </xpath>
    </template>

    <template id="login_page_signup" inherit_id="auth_signup.login" name="Sign up - Reset Password">
        <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="replace">
            <div class="justify-content-between mt-2 d-flex small">
                <!-- <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a> -->
                <!-- <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a> -->
            </div>
        </xpath>
    </template>

</odoo>
